
<% if(typeof displayName == 'string' && displayName) { %> 
    
    <%- include('../partials/header'); -%>

    <!-- Page Header & Content -->
    <div class="container p-5 mt-2 mb-5  transparent" style="text-align: center;padding-top: 70px;">
        <h1 class="large-font"><b>Contact List</b></h1>
        <!-- <a href="/business-list/add" class="btn btn-primary" role="button">
            <i class="fas fa-plus-circle"> Add a business contact</i>
        </a> -->
        <div style="padding-top: 50px; padding-left: 50px; padding-right: 50px;">
            <!-- <table class="table table-bordered table-hover animated fadeIn"> -->
            <table class="table table-dark">
                <!-- Header Row-->
                <tr>
                <% if(typeof displayName == 'string' && displayName) { %>
                    <th class="text-center" scope="col">Contact Name</th>
                    <th class="text-center" scope="col">Contact Number</th>
                    <th class="text-center" scope="col">Email Address</th>
                    <th class="text-center" scope="col"></th>
                    <th class="text-center" scope="col"></th>
                <% } else { %>
                    <th class="text-center" scope="col">Contact Name</th>
                    <th class="text-center" scope="col">Contact Number</th>
                    <th class="text-center" scope="col">Email Address</th>
                <% } %>
                </tr>
                <!-- Repeatable Template Row -->
                <% for(let count = 0; count < BusinessList.length; count++) { %>
                    <tr>
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <td class="text-center"><%= BusinessList[count].name %></td>
                        <td class="text-center"><%= BusinessList[count].number %></td>
                        <td class="text-center"><%= BusinessList[count].email %></td>
                        <td class="text-center">
                            <a href="/business-list/edit/<%= BusinessList[count]._id %>" class="btn btn-primary">
                                Update
                            </a>
                        </td>
                        <td class="text-center">
                            <a href="/business-list/delete/<%= BusinessList[count]._id %>" class="btn btn-primary">
                                Delete
                            </a>
                        </td>
                    <% } else { %>
                        <td class="text-center"><%= BusinessList[count].name %></td>
                        <td class="text-center"><%= BusinessList[count].number %></td>
                        <td class="text-center"><%= BusinessList[count].email %></td>
                    <% } %>
                    </tr>
                <% } %>
            </table>
        </div>
    </div>

    <%- include('../partials/script'); -%>

<% } else { %>
    <script> document.location.href = '/login' </script>
<% } %>    