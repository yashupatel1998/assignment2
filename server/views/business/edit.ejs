
<%- include('../partials/header'); -%>

<!-- Content for the Add page -->
<main class="container p-5 mt-2 mb-5  transparent">
    <div class="jumbotron">
        
    
        <!-- Page title -->
        <h1 class="xlarge-font" style="text-align: center;"><b>Update Business Contact</b></h1>
        <hr class="my-3"><br>
    
        <div class="row">
            <div class="offset-md-2 col-md-8">
    
                <!-- page form -->
                <form class="form" method="POST">
                    <div class="form-group">
                        <label for="nameTextField">Contact Name</label>
                        <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter full name"
                        name="name" 
                        value="<%= business.name %>"
                        required>
                    </div>
    
                    <div class="form-group">
                        <label for="contactNumberTextField">Contact Number</label>
                        <input type="tel" class="form-control"
                        id="contactNumberTextField" 
                        name="number" 
                        placeholder="Enter contact number"
                        pattern="[(7|8|9)\d{9}" 
                        value="<%= business.number %>"
                        required>
                    </div>
            
                    <div class="form-group">
                        <label for="emailTextField">Email</label>
                        <input type="email" class="form-control"
                        id="emailTextField"
                        placeholder="Enter email address"
                        name="email" 
                        value="<%= business.email %>"
                        required>
                    </div><br>
    
                    <button class="btn btn-success" type="submit" style="margin-right: 10px;">
                        <i class="fas fa-edit"></i> Update</button>
                    
                        <a href="/business-list" class="btn btn-warning" style="margin-right: 10px;">
                            <i class="fas fa-undo"></i> Cancel</a>
    
    
                            <a href="/business-list/delete/<%= business.id %>" class="btn btn-danger">
                                    Delete
                                </a>
    
                </form>
            </div>
    
        </div>
    </div>
    
    
</main>

<%- include('../partials/script'); -%>